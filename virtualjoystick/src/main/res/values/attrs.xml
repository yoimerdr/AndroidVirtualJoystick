<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JoystickView">
        <attr name="maxViewWidth" format="dimension" />
        <attr name="invalidRadius" format="dimension" />
        <attr name="background" format="reference" />
        <attr name="controlDrawer_primaryColor" format="color" />
        <attr name="controlDrawer_accentColor" format="color" />
        <attr name="controlDrawer" format="enum">
            <enum name="circle" value="0" />
            <enum name="arc" value="1" />
            <enum name="circe_arc" value="2"/>
        </attr>

        <attr name="arcControlDrawer_sweepAngle" format="float"/>
        <attr name="arcControlDrawer_strokeWidth" format="float"/>
    </declare-styleable>
</resources>