<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="JoystickView">
        <attr name="background" format="reference" />
        <attr name="moveInterval" format="integer" />
        <attr name="invalidRadius" format="dimension" />

        <attr name="controlType" format="enum">
            <enum name="circle" value="0" />
            <enum name="arc" value="1" />
            <enum name="circe_arc" value="2" />
        </attr>
        <attr name="directionType" format="enum">
            <enum name="complete" value="0" />
            <enum name="simple" value="1" />
        </attr>
        <attr name="aspect" format="enum">
            <enum name="classic" value="0" />
            <enum name="modern" value="1" />
            <enum name="dpad_classic" value="2" />
            <enum name="dpad_standard" value="3" />
            <enum name="dpad_modern" value="4" />
        </attr>

        <attr name="controlDrawer_primaryColor" format="color" />
        <attr name="controlDrawer_accentColor" format="color" />
        <attr name="controlDrawer_bounded" format="boolean" />

        <attr name="arcControlDrawer_sweepAngle" format="float" />
        <attr name="arcControlDrawer_strokeWidth" format="float" />

        <attr name="circleControlDrawer_radiusProportion" format="float" />
    </declare-styleable>
</resources>